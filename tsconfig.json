{
  "compilerOptions": {
    "target": "ES2017",                 // Specify ECMAScript target version
    "module": "CommonJS",               // Specify module code generation
    "outDir": "./dist",                 // Redirect output structure to the 'dist' directory
    "rootDir": "./src",                 // Specify the root directory of input files
    "strict": true,                     // Enable all strict type-checking options
    "esModuleInterop": true,            // Enable compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "declaration": true,                // Generate corresponding '.d.ts' files
    "sourceMap": true                   // Generate source map files
  },
  "include": ["src/**/*"],              // Include all TypeScript files in 'src' directory
  "exclude": ["node_modules", "tests"]  // Exclude 'node_modules' and 'tests' directories
}
